<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<!-- frameStrata Parameters:  BACKGROUND, LOW, MEDIUM, HIGH, DIALOG, FULLSCREEN, FULLSCREEN_DIALOG, TOOLTIP  -->
	<!-- Layer level Parameters:  BACKGROUND, BORDER, ARTWORK, OVERLAY, HIGHLIGHT -->
	<Script file="Style-Setup.lua" />

	<!-- SpartanUI -->
	<Frame name="Fel_SpartanUI" frameStrata="BACKGROUND" parent="UIParent">
		<Anchors>
			<Anchor point="BOTTOM" relativePoint="BOTTOM" />
			<Anchor point="TOP" relativePoint="BOTTOM">
				<Offset><AbsDimension x="0" y="153"/></Offset>
			</Anchor>
			<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" />
			<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" />
		</Anchors>
	</Frame>
	
	<!-- Fel_StatusBars_TooltipTemplate -->
	<Frame name="Fel_StatusBars_TooltipTemplate" frameStrata="TOOLTIP" virtual="true">
		<Size><AbsDimension x="360" y="80"/></Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentBG" file="Interface\AddOns\SpartanUI_Style_Fel\Images\Fel-Box">
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
					<TexCoords left="0" right="1" top="0.234375" bottom="0.84"/>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString name="$parentHeader" inherits="SUI_FontOutline10" justifyH="CENTER">
					<Size><AbsDimension x="300" y="15" /></Size>
					<Anchors>
						<Anchor point="TOP"><Offset><AbsDimension x="0" y="-15"/></Offset></Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentText" inherits="SUI_FontOutline8" justifyV="TOP">
					<Size><AbsDimension x="300" y="46" /></Size>
					<Anchors>
						<Anchor point="TOP" relativeTo="$parentHeader" relativePoint="BOTTOM"><Offset><AbsDimension x="0" y="-2"/></Offset></Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	
	<!-- Fel_StatusBar_Template -->
	<Frame name="Fel_StatusBar_Template" frameStrata="BACKGROUND" enableMouse="true" virtual="true">
		<Size><AbsDimension x="370" y="20" /></Size>
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentPlate" file="Interface\AddOns\SpartanUI_Artwork\Themes\Classic\Images\status-plate-exp">
					<Anchors><Anchor point="LEFT"/><Anchor point="RIGHT"/></Anchors>
					<TexCoords left="0.150390625" right="1" top="0" bottom="1" />
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture name="$parentFill" file="Interface\AddOns\SpartanUI_Artwork\Themes\Classic\Images\status-glow">
					<Size><AbsDimension x=".1" y="20" /></Size>
					<Anchors><Anchor point="RIGHT" /></Anchors>
				</Texture>
				<Texture name="$parentLead" file="Interface\AddOns\SpartanUI_Artwork\Themes\Classic\Images\status-glow">
					<Size><AbsDimension x=".1" y="20" /></Size>
					<Anchors><Anchor point="RIGHT" relativeTo="$parentFill" relativePoint="LEFT"/></Anchors>
					<TexCoords left="1" right="0" top="0" bottom="1" />
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentFillGlow" file="Interface\AddOns\SpartanUI_Artwork\Themes\Classic\Images\status-glow" alphaMode="ADD">
					<Size><AbsDimension x=".1" y="20" /></Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentFill" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeTo="$parentFill" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
				<Texture name="$parentLeadGlow" file="Interface\AddOns\SpartanUI_Artwork\Themes\Classic\Images\status-glow" alphaMode="ADD">
					<Size><AbsDimension x=".1" y="20" /></Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentLead" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeTo="$parentLead" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
					<TexCoords left="1" right="0" top="0" bottom="1" />
				</Texture>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture name="$parentPlate" file="Interface\AddOns\SpartanUI_Artwork\Themes\Classic\Images\status-plate-exp">
					<Anchors><Anchor point="LEFT"/><Anchor point="RIGHT"/></Anchors>
					<TexCoords left="0.150390625" right="1" top="0" bottom="1" />
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentText" inherits="SUI_FontOutline10" justifyH="CENTER">
					<Size><AbsDimension x="300" y="18" /></Size>
					<Anchors><Anchor point="TOP"/></Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	
	<!-- Fel_BarTemplate1 -->
	<Frame name="Fel_BarTemplate1" frameStrata="BACKGROUND" virtual="true">
		<Size><AbsDimension x="400" y="32" /></Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentBG" file="Interface\AddOns\SpartanUI_Style_Fel\Images\Fel-Box" alpha=".5">
					<Size><AbsDimension x="400" y="32" /></Size>
					<Anchors><Anchor point="CENTER" relativePoint="CENTER"/></Anchors>
					<TexCoords left="0.07421875" right="0.92578125" top="0.359375" bottom="0.6796875"/>
				</Texture>
			</Layer>
		</Layers>
	</Frame>
	
	<!-- Fel_ActionBarsTemplate -->
	<Frame name="Fel_ActionBarsTemplate" parent="Fel_SpartanUI" frameStrata="BACKGROUND" virtual="true">
		<Size><AbsDimension x="1002" y="139"/></Size>
		<Frames>
			<!-- Action Bars -->
			<Frame name="Fel_Bar1" inherits="Fel_BarTemplate1">
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOM"><Offset><AbsDimension x="-110" y="70" /></Offset></Anchor>
				</Anchors>
			</Frame>
			<Frame name="Fel_Bar2" inherits="Fel_BarTemplate1">
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOM"><Offset><AbsDimension x="-110" y="25" /></Offset></Anchor>
				</Anchors>
			</Frame>
			<Frame name="Fel_Bar3" inherits="Fel_BarTemplate1">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOM"><Offset><AbsDimension x="110" y="70" /></Offset></Anchor>
				</Anchors>
			</Frame>
			<Frame name="Fel_Bar4" inherits="Fel_BarTemplate1">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOM"><Offset><AbsDimension x="110" y="25" /></Offset></Anchor>
				</Anchors>
			</Frame>
			<!-- Misc Bars -->
			<Frame name="Fel_MenuBar" inherits="Fel_BarTemplate1">
				<Anchors>
					<Anchor point="BOTTOM" relativeTo="Fel_Bar3" relativePoint="TOP"><Offset><AbsDimension x="0" y="10" /></Offset></Anchor>
				</Anchors>
			</Frame>
			<Frame name="Fel_StanceBar" inherits="Fel_BarTemplate1">
				<Anchors>
					<Anchor point="BOTTOM" relativeTo="Fel_Bar1" relativePoint="TOP"><Offset><AbsDimension x="0" y="10" /></Offset></Anchor>
				</Anchors>
			</Frame>
			<!-- Status Bars -->
			<Frame name="Fel_ExperienceBar" inherits="Fel_StatusBar_Template">
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOM"><Offset><AbsDimension x="-110" y="0" /></Offset></Anchor>
				</Anchors>
			</Frame>
			<Frame name="Fel_ReputationBar" inherits="Fel_StatusBar_Template">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOM"><Offset><AbsDimension x="110" y="0" /></Offset></Anchor>
				</Anchors>
			</Frame>
			<Frame name="Fel_ArtifactBar" inherits="Fel_StatusBar_Template">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOM"><Offset><AbsDimension x="110" y="0" /></Offset></Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						local name = self:GetName();
						_G[name.."Fill"]:SetVertexColor(1, 0.8, 0, 0.7);
					</OnLoad>
					<OnEnter>
						if SUI.DBP.APBar.ToolTip == "hover" then Fel_ArtifactBarTooltip:Show() end
					</OnEnter>
					<OnMouseDown>
						if SUI.DBP.APBar.ToolTip == "click" then Fel_ArtifactBarTooltip:Show() end
					</OnMouseDown>
					<OnLeave>
						Fel_ArtifactBarTooltip:Hide()
					</OnLeave>
				</Scripts>
			</Frame>
			<Frame name="Fel_ArtifactBarTooltip" hidden="true" inherits="Fel_StatusBars_TooltipTemplate">
				<Anchors>
					<Anchor point="BOTTOM" relativeTo="Fel_ArtifactBar" relativePoint="TOP"><Offset><AbsDimension x="6" y="-1" /></Offset></Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						local FrameName = self:GetName();
						if HasArtifactEquipped() then
							local spartan = LibStub("AceAddon-3.0"):GetAddon("SpartanUI")
							local itemID, altItemID, name, icon, xp, pointsSpent, quality, artifactAppearanceID, appearanceModID, itemAppearanceID, altItemAppearanceID, altOnTop = C_ArtifactUI.GetEquippedArtifactInfo();
							local xpForNextPoint = C_ArtifactUI.GetCostForPointAtRank(pointsSpent);
							local ratio = (xp/xpForNextPoint);
							
							_G[FrameName.."Header"]:SetText(name);							
							_G[FrameName.."Text"]:SetFormattedText("( %s / %s ) %d%%", spartan:comma_value(xp), spartan:comma_value(xpForNextPoint), ratio*100)
						else
							_G[FrameName.."Header"]:SetText("No Artifact equiped");
							_G[FrameName.."Text"]:SetText("")
						end
					</OnShow>
				</Scripts>
			</Frame>
		</Frames>
	</Frame>
	
	<Script file="Module-Artwork.lua" />
	<Script file="Module-UnitFrames.lua" />
	<Script file="Style.lua" />
</Ui>